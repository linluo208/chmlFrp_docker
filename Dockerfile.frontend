FROM node:18-alpine as build

WORKDIR /app

# 复制package.json并安装依赖
COPY frontend/package*.json ./
RUN npm install

# 复制源代码并构建
COPY frontend/ .
RUN npm run build

# 使用nginx作为生产服务器
FROM nginx:alpine

# 复制构建文件到nginx
COPY --from=build /app/build /usr/share/nginx/html

# 复制nginx配置
COPY nginx.conf /etc/nginx/nginx.conf

# 暴露端口
EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]
